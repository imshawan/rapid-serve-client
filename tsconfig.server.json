{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "moduleResolution": "node",
    "lib": ["es2019"],
    "target": "es2019",
    "isolatedModules": false,
    "noEmit": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*", "./server/*"]
    }
  },
  "include": ["server/*.ts", "types/*.ts"] 
}
